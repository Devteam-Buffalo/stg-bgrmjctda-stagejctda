defined('ABSPATH') or exit;

add_action( 'after_setup_theme', function() {

	$labels = [
		'Primary',
		'Ancillary',
		'Tertiary',
		'Outdoors Mega',
		'Attractions Mega',
		'Food & Drink Mega',
		'Lodging Mega',
		'Your Trip Mega',
		'Footer Left',
		'Footer Right',
		'Footer Contact',
		'Footer Legal',
		'Offcanvas Top',
		'Offcanvas Bottom',
	];
	
	$nav_menus = [];
	
	foreach ( $labels as $menu )
		$nav_menus[sanitize_title_with_dashes( $menu )] = __( $menu );
	
	register_nav_menus( $nav_menus );
});