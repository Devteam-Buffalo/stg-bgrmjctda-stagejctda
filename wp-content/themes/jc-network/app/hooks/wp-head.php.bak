add_action( 'wp_head', function() {
	print(
		'<script>document.documentElement.classList.remove("no-js");</script>'."\n".
		'<link crossorigin="anonymous" rel="shortcut icon" href="'.CDN_URL.'/assets/favicons/favicon.ico?v=3.2.0">'."\n".
		'<link rel="preconnect" href="https://storage.googleapis.com">'."\n".
		'<link rel="preconnect" href="https://maps.googleapis.com">'."\n"
	);
	if ( has_post_thumbnail() ) {
		printf(
			'<link crossorigin="anonymous" rel="preload" href="%s" as="image">'."\n",
			wp_get_attachment_image_url( get_post_thumbnail_id(), 'full' )
		);
	}
}, 1 );

