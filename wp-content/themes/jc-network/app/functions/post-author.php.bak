if ( ! function_exists( 'jc_post_author' ) ) :

	function jc_post_author() {

		$byline = sprintf(
			/* translators: %s: post author. */
			esc_html_x( 'by %s', 'post author', 'jctda' ),
			'<div class="uk-padding-left uk-text-uppercase uk-text-truncate sans-serif"><a class="url fn n" href="' . esc_url( get_author_posts_url( get_the_author_meta( 'ID' ) ) ) . '">' . esc_html( get_the_author() ) . '</a></div>'
		);

		ob_start(); ?>

		<div class="uk-flex post-meta post-author">
			<div><span class="uk-icon-quote-left uk-icon-justify"></span></div>
			<?= $byline ?>
		</div>

		<?php ob_get_flush();

	}

endif;
