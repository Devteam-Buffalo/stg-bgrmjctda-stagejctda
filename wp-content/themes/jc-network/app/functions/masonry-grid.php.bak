defined('ABSPATH') || exit;

if ( ! function_exists( 'jc_model_masonry_grid' ) ) :

	function jc_model_masonry_grid( $args = [] ) {
		
		if( ! is_array( $args ) ) 
			return false;
		
		$locations = $args['locations'];

		ob_start(); ?>

		<section class="uk-container uk-container-center masonry-container">
			<div class="masonry-tiles">
				<?php foreach( $locations as $post ) : ?>
				
				<a href="<?= $post['permalink'] ?>" class="masonry-tile masonry-link" title="View <?= $post['post_title'] ?>">
					<?= $post['masonry_image'] ?>
					<h4 class="masonry-title caption overlay-yellow overlay-<?= $post['post_type'] ?> text-shadow small-shadow"><?= $post['post_title'] ?></h4>
				</a>
				
				<?php endforeach; ?>
			</div>
		</section>

		<?php return ob_get_clean();

	}

endif;